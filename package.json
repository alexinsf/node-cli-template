{
  "name": "your-package-name",
  "version": "0.0.1",
  "description": "A modern Node.js CLI project template with TypeScript, ESLint, Prettier, Vitest, Husky and Lint-Staged",
  "author": "Alexander Ulanch",
  "license": "MIT",
  "private": false,
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "your-cli-command": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli.ts",
    "start": "tsx src/cli.ts",
    "lint": "eslint . --ext .ts",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "format": "prettier --write .",
    "docs": "typedoc src/cli.ts --out docs",
    "prepare": "husky",
    "prepublishOnly": "pnpm run build",
    "release": "semantic-release"
  },
  "devDependencies": {
    "@types/node": "^20.19.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "jiti": "2.4.2",
    "lint-staged": "^16.1.2",
    "prettier": "^3.3.3",
    "tsx": "^4.20.3",
    "typedoc": "^0.28.7",
    "typescript": "5.3.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4",
    "@vitest/coverage-v8": "3.2.4",
    "semantic-release": "^23.0.0"
  },
  "lint-staged": {
    "*.{ts,js,json,md,yml}": "prettier --write",
    "*.ts": "eslint --fix --ext .ts"
  }
}
